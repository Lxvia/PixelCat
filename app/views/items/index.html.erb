<div class="products-title"><h2>TOUS NOS PRODUITS :</h2></div>
<!-- PRODUCT CARDS -->
<div class="products-section">
  <% @items.each do |item| %>
    <div class="product-card">
        <img src="<%= item.img_url %>" 
                    alt="img cat" class="kitten-img">
        <div class="product-text mt-2">
            <h5><%= item.title %></h5>
            <h6><%= item.price %>â‚¬</h6>
        </div>
        <div class="section-btn">
             <button><%= link_to "Voir plus", item_path(item), class: "product-btn" %></button>
             <%= button_to 'Ajouter au panier', carts_path, remote: true, params: {item_id: item.id} ,method: :post, class: "show-button" %>
            <%= button_tag( :class => "btn-i") do %>
            <i class="fa-solid fa-cart-shopping"></i>
            <% end %>
        </div>
    </div>
  <% end %>
</div>
<!-- PRODUCT CARDS END -->
